#!/bin/bash
# Launches all Habitat bots.

set -euo pipefail

HABITAT_HOST="${HABIBOTS_HOST-127.0.0.1}"
HABITAT_PORT="${HABIBOTS_PORT-1337}"

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

node greeter.js \
  -g "${DIR}/assets/greeting.txt" \
  -t rLGUstSJGUC2eW9610GfoMBx \
  -c context-test \
  -h "${HABITAT_HOST}" \
  -p "${HABITAT_PORT}" \
  -u pcollins
